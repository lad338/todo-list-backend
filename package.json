{
  "name": "todo-list-backend",
  "version": "1.0.0",
  "repository": "https://github.com/lad338/todo-list-backend.git",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "tsc": "^2.0.4",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^7.0.3"
  },
  "scripts": {
    "eslint": "eslint . --ext .ts",
    "prettier:ts": "prettier --config .prettierrc '**/*.{ts,tsx}' --write",
    "p": "yarn prettier:ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "dep": "docker compose -f docker-compose-dependencies.yaml up",
    "dep:build": "docker compose -f docker-compose-dependencies.yaml up --build"
  }
}
